#!/bin/zsh

# Common

alias 7zip='7zz'
alias bat='bat -n'
alias cat='bat'
alias cal='cal -m3'
alias cd='z'
alias cd..='z ..'
alias dir='nnn -deH'
alias imagemagick='magick'
alias js='node'
alias ls='eza --group-directories-first --icons'
alias mc='mc --nosubshell'
alias myip='curl icanhazip.com' # Show public IP
alias pip='pip3'
alias pipi='pip install'
alias pipu='pip uninstall'
alias pipf='pip freeze'
alias python='python3'
alias reload="source $ZDOTDIR/.zshrc && omz reload"
alias rp='rp -i'
alias shopt='/usr/bin/shopt'
alias ts='npx tsx'
alias tree='eza --tree'
alias tree2='eza --tree --level=2'
alias tree3='eza --tree --level=3'
alias vi='nvim'
alias view='nvim -R'
alias vim='nvim'
alias vsc='code'
alias neovim='nvim'
alias vimdiff='nvim -d'
alias youtube-dl='yt-dlp'
alias ytdl='yt-dlp'
alias zz='z -'

# Git

alias gaa='git add --all'
alias gcm='git commit -m "update"'
alias glog='git log --oneline -n 10'
alias gpu='git add --all && git commit -m "update" && git push'
alias grb='git pull --rebase'
alias gup='git pull --rebase'
alias gsb='git status -sb'
alias gst='git status -s'

# MacOS

if [[ "$(osname)" == "macos" ]]; then
    alias cal='/opt/homebrew/opt/util-linux/bin/cal -m3'
fi
