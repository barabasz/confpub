#!/bin/zsh

# track loaded files
# local thispath="${(%):-%x}"
zsh_files+=("zsh_aliases")

# Global

alias -g G='| grep'

# Common

alias reload="source $ZDOTDIR/.zshrc && omz reload"
alias myip='curl icanhazip.com' # Show public IP

# Applications

## 7zz
if [[ $(isinstalled 7zz) ]]; then
    alias 7z='7zz'
fi

## bat
if [[ $(isinstalled bat) ]]; then
    alias bat='bat -n'
    alias cat='bat'
fi

## cal
if [[ $(isinstalled cal) ]]; then
    alias cal='cal -m3'
fi

## code
if [[ $(isinstalled code) ]]; then
    alias vsc='code'
fi

## exa
if [[ $(isinstalled eza) ]]; then
    alias eza='eza --icons'
    alias exa='eza'
    alias ls='eza --group-directories-first'
    alias ll='ls --long'
    alias la='ll --all'
    alias tree='eza --tree'
    alias tree2='eza --tree --level=2'
    alias tree3='eza --tree --level=3'
fi

## git
if [[ $(isinstalled git) ]]; then    
    alias gaa='git add --all'
    alias gcm='git commit -m "update"'
    alias glog='git log --oneline -n 10'
    alias gpu='git add --all && git commit -m "update" && git push'
    alias grb='git pull --rebase'
    alias gup='git pull --rebase'
    alias gsb='git status -sb'
    alias gst='git status -s'
fi

## gsed
if [[ "$(osname)" == "macos" ]]; then
    if [[ $(isinstalled gsed) ]]; then
        alias sed='gsed'
    fi
fi

## mc
if [[ $(isinstalled mc) ]]; then
    alias mc='mc --nosubshell'
fi

## nivm
if [[ $(isinstalled git) ]]; then 
    alias vi='nvim'
    alias view='nvim -R'
    alias vim='nvim'
    alias neovim='nvim'
    alias vimdiff='nvim -d'
fi

## node
if [[ $(isinstalled node) ]]; then
    alias js='node'
fi

## npx
if [[ $(isinstalled npx) ]]; then
    alias ts='npx tsx'
fi

## pip3
if [[ $(isinstalled pip3) ]]; then 
    alias pip='pip3'
    alias pipi='pip install'
    alias pipu='pip uninstall'
    alias pipf='pip freeze'
fi

## oh-my-posh
if [[ $(isinstalled oh-my-posh) ]]; then
    alias omp='oh-my-posh'
fi

## python
if [[ $(isinstalled python3) ]]; then 
    alias python='python3'
    alias py='python3'
fi

## yt-dlp
if [[ $(isinstalled yt-dlp) ]]; then
    alias youtube-dl='yt-dlp'
    alias ytdl='yt-dlp'
fi

## z (zoxide)
if [[ $(isinstalled zoxide) ]]; then
    alias cd='z'
    alias cd..='z ..'
    alias zz='z -'
fi
